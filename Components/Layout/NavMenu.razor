@if (IsOpen)
{
    <div class="custom-navmenu-wrapper">
        <div class="custom-navmenu-backdrop" @onclick="CloseNav"></div>

        <div class="custom-navmenu is-open" role="navigation" aria-label="Hauptmenü">
            <div class="custom-navmenu__header">
                <a class="custom-navmenu-item" href="">stunning-umbrella</a>
            </div>

            <div class="custom-navmenu__content">
                <NavLink class="custom-navmenu-item" href="" Match="NavLinkMatch.All">
                    <span class="custom-icon">🏠</span> Home
                </NavLink>
                <NavLink class="custom-navmenu-item" href="Kuchenrezepte">
                    <span class="custom-icon">➕</span> Kuchenrezepte
                </NavLink>
            </div>

            <div class="custom-navmenu__footer">
                <span class="custom-text">© 2025</span>
                <button class="custom-navmenu__close" @onclick="CloseNav" aria-label="Menü schließen">🗙</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }

    private async Task CloseNav()
    {
        await IsOpenChanged.InvokeAsync(false);
    }
}

